---
import FINAL_URL from '../../constants/Youtube'

export const prerender = false;

const response = await fetch(FINAL_URL)
const {title, id} = await response.json()

---

<article class="circle blur-effect col-span-5 relative min-h-[150px] rounded-[24px] overflow-hidden">
    <div class="w-full h-full flex flex-col justify-center p-4 s-4">
      <p class="text-white text-2xl font-bold">Último vídeo</p>
      <a target="_blank" href=`https://www.youtube.com/watch?v=${id}` class="text-white underline font-semibold text-xl">{title}</a>
    </div>
  <div style=`background-image: url(https://img.youtube.com/vi/${id}/hqdefault.jpg); background-repeat: no-repeat; opacity: 0.1; background-size: cover; background-position: center;` class="absolute top-0 z-10 w-full h-full"></div>
</article>

<style>
  .blur-effect {
      background: rgba( 22, 13, 24, 0.5 );
      backdrop-filter: blur( 4px );
      -webkit-backdrop-filter: blur( 4px );
      border-radius: 24px;
      box-shadow: inset 0 0 10px #fff;
      border: 1px solid #3D2D42;
    
      -webkit-box-shadow: inset 25px 0px 108px 26px rgba(75,54,82,0.1);
      -moz-box-shadow: inset 25px 0px 108px 26px rgba(75,54,82,0.1);
      box-shadow: inset 25px 0px 108px 26px rgba(75,54,82,0.1);
    }
  </style>