---
import CustomArrow from "../CustomArrow.astro";
---

<article
  data-glow
  class="background max-w-full glow-container blur-effect relative circle col-span-2 min-h-[150px] max-h-[200px] rounded-[24px]"
>
  <div data-glow></div>
  <div class="w-full h-full flex flex-col">
    <div class="flex color-white justify-end">
      <slot name="icon" />
    </div>
    <div class="flex flex-1 items-end">
      <div class="w-fit h-fit">
        <CustomArrow />
      </div>
    </div>
  </div>
</article>
